@model IEnumerable<Person>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            Avatar
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Action("GetAvatar", "Person", new { id = item.Id })" class="img-circle" width="70" height="70" alt="Person Image" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-xs">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-xs">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-xs">Delete</a>
        </td>
    </tr>
}
</table>
